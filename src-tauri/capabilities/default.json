{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Phronesis FCIP capabilities for document management and analysis",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "log:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$TEMP/**" }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$TEMP/**" }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [{ "path": "$TEMP/**" }]
    }
  ]
}
