{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Next.js: Debug Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Jest: Current File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["test", "--", "--runTestsByPath", "${relativeFile}", "--no-coverage"],
      "console": "integratedTerminal"
    },
    {
      "name": "Jest: Debug Current File",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "test",
        "--",
        "--runTestsByPath",
        "${relativeFile}",
        "--no-coverage",
        "--detectOpenHandles"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Tauri: Debug Rust",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": ["build", "--manifest-path", "src-tauri/Cargo.toml"],
        "filter": {
          "name": "phronesis",
          "kind": "bin"
        }
      },
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Next.js: Full Stack",
      "configurations": ["Next.js: Debug Server", "Next.js: Debug Client"]
    }
  ]
}
