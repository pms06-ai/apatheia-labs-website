{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Validate All",
      "type": "npm",
      "script": "validate",
      "problemMatcher": ["$tsc", "$eslint-stylish"],
      "group": "build"
    },
    {
      "label": "Type Check",
      "type": "npm",
      "script": "type-check",
      "problemMatcher": "$tsc",
      "group": "build"
    },
    {
      "label": "Rust: Check",
      "type": "shell",
      "command": "cargo check --manifest-path src-tauri/Cargo.toml",
      "problemMatcher": "$rustc",
      "group": "build"
    },
    {
      "label": "Rust: Clippy",
      "type": "shell",
      "command": "cargo clippy --manifest-path src-tauri/Cargo.toml -- -D warnings",
      "problemMatcher": "$rustc",
      "group": "build"
    },
    {
      "label": "Test: All",
      "type": "npm",
      "script": "test",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Test: Watch",
      "type": "npm",
      "script": "test:watch",
      "problemMatcher": [],
      "isBackground": true,
      "group": "test"
    },
    {
      "label": "Tauri: Dev",
      "type": "shell",
      "command": "npm run tauri dev",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Tauri: Build",
      "type": "shell",
      "command": "npm run tauri build",
      "problemMatcher": ["$rustc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Full Integration Check",
      "dependsOn": ["Type Check", "Rust: Check"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": "build"
    }
  ]
}
