{
  "name": "apatheia-labs",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "mcp:dev": "npm run dev -w @apatheia/mcp-server",
    "mcp:build": "npm run build -w @apatheia/mcp-server",
    "mcp:start": "npm run start -w @apatheia/mcp-server",
    "mcp:http": "npm run start:http -w @apatheia/mcp-server",
    "obsidian:dev": "npm run dev -w obsidian-phronesis",
    "obsidian:build": "npm run build -w obsidian-phronesis",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "validate": "npm run type-check && npm run lint && npm run test",
    "health": "curl -s http://localhost:3000/api/health | jq",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:icon": "tauri icon",
    "build:sidecar": "cd src-tauri/sidecars && npm install && npm run build",
    "sidecar:install": "cd src-tauri/sidecars && npm install",
    "prepare": "husky",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:reset-db": "docker compose down -v && docker compose up -d postgres",
    "docker:ocr": "docker compose exec python-tools python /app/tools/ocr/process_messages_ocr.py",
    "docker:embed": "docker compose exec python-tools python /app/scripts/embeddings.py",
    "audit": "docker compose exec architect ./scripts/audit.sh apatheia-scaffold",
    "audit:full": "docker compose exec architect ./scripts/audit.sh apatheia-scaffold --full",
    "audit:exec": "docker compose exec architect ./scripts/test-exec.sh apatheia-scaffold",
    "audit:report": "docker compose exec architect ./scripts/report.sh apatheia-scaffold --markdown",
    "version:sync": "node scripts/sync-version.js",
    "vault:sync": "node scripts/obsidian-sync.js sync",
    "vault:import": "node scripts/obsidian-sync.js import",
    "vault:export": "node scripts/obsidian-sync.js export",
    "vault:status": "node scripts/obsidian-sync.js status"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.679.0",
    "@aws-sdk/s3-request-presigner": "^3.679.0",
    "@google/generative-ai": "^0.21.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@react-pdf/renderer": "^4.0.0",
    "@tanstack/react-query": "^5.59.16",
    "@tanstack/react-virtual": "^3.13.18",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "ai": "^6.0.3",
    "better-sqlite3": "^12.5.0",
    "chrono-node": "^2.7.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "compromise": "^14.14.5",
    "date-fns": "^4.1.0",
    "docx": "^8.0.0",
    "fastest-levenshtein": "^1.0.16",
    "file-saver": "^2.0.5",
    "framer-motion": "^11.11.11",
    "graphology": "^0.26.0",
    "groq-sdk": "^0.8.0",
    "lucide-react": "^0.454.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.9",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^7.1.1",
    "replicate": "^1.0.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/eslintrc": "^3.3.3",
    "@swc/jest": "^0.2.37",
    "@tauri-apps/cli": "^2.9.6",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-plugin-compat": "^6.0.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.47",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^6.0.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
